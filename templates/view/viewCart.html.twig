    <body>
    <!-- Header -->
    {% include 'header.html.twig' %}
    <!---->
        <div id="pageContent" class="d-flex flex-column align-items-start">
            <div class="heading cf">
                <h1>Mon panier</h1>
                <a href="#" class="continue btn">Poursuivre les achats</a>
            </div>
            <div id="loading" class="d-flex justify-content-center w-100 py-5">
                <img src="{{ asset('img/loading.gif') }}"/>
            </div>
            <div class="cart w-100 d-none">
                <span id="emptyCart" class="px-5 d-none">Votre panier est vide</span>
                
                <ul class="cartWrap w-100 d-none">
                </ul>
            </div>
            
            <div class="code_delivery row m-0 w-100 d-none">
                <div class="col promoCode">
                    <label for="promo">Vous avez un code promo ?</label>
                    <input type="text" name="promo" placholder="Entrez votre code"/>
                    <a href="#" class="btn"></a>
                </div>

                <!-- Ajouter des boutons radios pour savoir le mode de livraison choisi (en fonction des types de livraison du shop) -->
                <div id="delivery" class="col">
                    <label class="" for="">Mode de livraison</label>
                    <select id="deliverySelect" name="tmagasin">
                        <option>Click & Collect</option>
                        <option>Livraison à domicile</option>
                    </select>
                </div>
            </div>

            <div class="subtotal cf justify-content-end d-none">
                <ul>
                    <li class="totalRow">
                        <span class="label">Sous-total</span>
                        <span id="subtotalPrice" class="value"></span>
                    </li>
                    <li class="totalRow">
                        <span class="label">Livraison</span>
                        <span id="deliveryPrice" class="value"> 0 €</span>
                    </li>
                    <li class="totalRow final">
                        <span class="label">Total</span>
                        <span id="totalPrice" class="value"></span>
                    </li>
                    <li class="totalRow">
                        <a href="cart-payment" class="btn continue">Valider la commande</a>
                    </li>
                </ul>
            </div>
            
        </div>
        
        {% include 'footer.html.twig' %}
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
