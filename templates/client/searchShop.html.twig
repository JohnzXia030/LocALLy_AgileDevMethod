<body>
{% include 'header.html.twig' %}
<div class="container-fluid" id="containerSearch">

    <div class="row">
        <div class="recherche_p mt-4 mx-4">
            <form class="form-inline my-3 my-lg-3">
                <div class="recherche-barr w-100">
                     
                    <input class="rechercheInput w-80 mr-2 px-2" id="searchInput2" type="search" placeholder=" Rechercher">
                    <a href="#" class="recherche-icone">
                        <i class="fas fa-search fa-2x"></i>
                     </a>
                    <div id="suggestions"></div>
                </div>
            </form>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12 col-md-5">
            <h3 class="headline">
                <span>Filtrer par ville</span>
            </h3>
            <div class="d-flex flex-wrap">
                <div class="select-outline position-relative w-100">
                    <select id="city" class="mdb-select md-outline md-form" searchable="Rechercher Ville">
                        <option value=""  selected>Choisir ville</option>
                        <option value="bordeaux">Bordeaux</option>
                        <option value="pessac">Pessac</option>
                        <option value="talence">Talence</option>
                        <option value="merignac">MÃ©rignac</option>
                    </select>
                </div>
            </div>
            <form class="shop__filter">
               
                <div class="shop-type">
                    <!-- Checkboxes -->
                    <h3 class="headline">
                        <span>Types</span>
                    </h3>

                    <div class="group-checkbox">
                        <select class="shop-type-option" id="shop-type-option" name="type[]" multiple="multiple">
                            <option value="coiffeurs">Coiffeurs</option>
                            <option value="boulangerie">Boulangerie</option>
                            <option value="commerces">Commerces</option>
                            <option value="bijouterie">Bijouterie</option>
                        </select>
                    </div>
                </div>
                <div class="delivry">
                    <!-- Radios -->
                    <h3 class="headline">
                        <span>Option Retrait</span>
                    </h3>
                    <div class="radio">
                        <input type="radio" name="shop-filter-pick" id="shop-filter-radio_1" value="delivery"
                               checked="">
                        <label for="shop-filter-radio_1">Livraison</label>
                    </div>
                    <div class="radio">
                        <input type="radio" name="shop-filter-pick" id="shop-filter-radio_2" value="click-collect">
                        <label for="shop-filter-radio_2">Click&Collect</label>
                    </div>
                </div>
                <button type="button" class="btn-save btn btn-sm mt-2" onclick="applyFilters()">Valider</button>
            </form>
        </div>
        <div class="col-12 col-md-7">
            <div class="row row-cols-1 row-cols-md-3 g-4" id="shop-container">
                {#// Magasins ici#}

            </div>

        </div>

    </div> <!-- / .row -->
    <div class="row pagination-div m-5">
        <div class="col-12 col-md-3">
        </div>
        <div class="col-12 col-md-6">
            <ul id="pagination" class="pagination-sm "></ul>
        </div>
        <div class="col-12 col-md-3">
        </div>
    </div>
</div>
