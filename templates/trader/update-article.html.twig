{% include 'header.html.twig' %}

<div class="container">
    <div class="row" id="upart">
        <div class="col-md-12 col-lg-12">
            <form role="form" id="form-article">
                <h2 class="fs-title">Mettre à jour Article</h2>
                <div class="form-group">
                    <label for="name-article">Nom d'article</label>
                    <input id="name-article" name="name-article" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input id="description-article" name="description-article" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label>Prix</label>
                    <input id="price-article" name="price-article" type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label>Promotion</label>
                    <input id="discount-article" name="discount-article" type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label>Durée de promotion</label>
                    <input id="period-discount-article" name="period-discount-article" type="number"
                           class="form-control">
                </div>
                <div class="checkbox">
                    <label>Disponibilité:</label>
                    <input id="available-article" name="available-article" type="checkbox">
                </div>
                <div class="form-group">
                    <label>Quantité de stock</label>
                    <input id="stock-article" name="stock-article" type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label>Photo d'article</label>
                    <input id="photo-article " type="file" multiple="multiple" accept="image/jpeg, image/png"
                           class="input_file" onchange="previewImage(this)">
                </div>
                <button type="button" class="btn btn-primary" class="form-control" onclick="submitUpdateArticleForm()">
                    Submit
                </button>
            </form>
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner" id="photo-list">


                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</div>

{% include 'footer.html.twig' %}