    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css"/>
    <link href="https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic" rel="stylesheet"
          type="text/css"/>
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css"/>
    <!-- Core theme CSS (includes Bootstrap)-->
    <!-- Bootstrap core JS-->
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

</head>

<body>
{% include 'header.html.twig' %}
<!-- multistep form -->
<form role="form" id="msform">
    <!-- progressbar -->
    <ul id="progressbar">
        <li class="active">Mettre à jour mon commerce</li>
        <li>Horaires</li>
        <li>FAQ</li>
    </ul>
    <!-- fieldsets -->
    <fieldset>
        <h2 class="fs-title">Mettre à jour mon commerce</h2>

        <div class="info">
        <label class="uslabel" for="nenseigne">Nom de L'enseigne</label>
        <input type="text" name="nenseigne"/>
        </div>

        <div class="info">
        <label class="uslabel" for="numvoie">Numéro de Voie</label>
        <input type="text" name="numvoie"/>
        </div>

        <div class="info">
        <label class="uslabel" for="nomvoie">Nom de Voie</label>
        <input type="text" name="nomvoie"/>
        </div>

        <div class="info">
        <label class="uslabel" for="ca">Complément d'adresse</label>
        <input type="text" name="ca"/>
        </div>

        <div class="info">
        <label class="uslabel" for="nville">Ville</label>
        <input type="text" name="nville"/>
        </div>

        <div class="info">
        <label class="uslabel" for="numtel">Numéro Téléphone</label>
        <input type="tel" name="numtel"/>
        </div>

        <div class="info">
        <label class="uslabel" for="tmagasin">Types</label>
        <select name="tmagasin">
            <option>Commerces</option>
            <option>Coiffeurs</option>
            <option>Boulangerie</option>
        </select>
        </div>

        <div class="info">
        <label class="uslabel">Options Retrait</label>
        <select name="oretrait">
            <option>Click&Collect</option>
            <option>Livraison</option>
        </select>
        </div>

        <div class="info">
        <label class="uslabel">Thématique</label>
        <input type="text" name="thematique"/>
        </div>

        <div class="info">
        <label class="uslabel">A propos</label>
        <textarea rows="5" cols="20" wrap="physique" name="commentaires">A Propos </textarea><br/>
        </div>
        <!--<input type="button" name="next" class="add" value="Ajouter une photo" /> -->
        <div class="piece_jointe-area">
            <label class="uslabel">Photos du commerce</label>
            <input type='file' name="picture"/>
            <div class="input_fields_photos">
                <button class="add_field_button2">Ajouter Photo</button>
            </div>
        </div>
        <input type="button" name="next" class="next action-button" value="Suivant"/>
    </fieldset>

    <fieldset>
        <h2 class="fs-title">Mes Horaires</h2>
        <div class="hc-grid-container">
            <div class="Titre1">Horaire</div>
            <div class="Horaire"><table style="height: 112px; width: 100%; border-collapse: collapse; border-style: none; margin-left: auto; margin-right: auto;" border="0" cellpadding="0">
                    <tbody style="color:black;">
                        <tr style="height: 21px;">
                            <td style="width: 50%; height: 22px;">Lundi</td>
                            <td style="width: 50%; height: 22px;">11h00-20h30</td>
                        </tr>
                        <tr style="height: 15px;">
                            <td style="width: 50%; height: 15px;">Mardi</td>
                            <td style="width: 50%; height: 15px;">11h00-20h30</td>
                        </tr>
                        <tr style="height: 15px;">
                            <td style="width: 50%; height: 15px;">Mercredi</td>
                            <td style="width: 50%; height: 15px;">11h00-20h30</td>
                        </tr>
                        <tr style="height: 15px;">
                            <td style="width: 50%; height: 15px;">Jeudi</td>
                            <td style="width: 50%; height: 15px;">11h00-20h30</td>
                        </tr>
                        <tr style="height: 15px;">
                            <td style="width: 50%; height: 15px;">Vendredi</td>
                            <td style="width: 50%; height: 15px;">11h00-20h30</td>
                        </tr>
                        <tr style="height: 15px;">
                            <td style="width: 50%; height: 15px;">Samedi</td>
                            <td style="width: 50%; height: 15px;">11h00-20h30</td>
                        </tr>
                        <tr style="height: 15px;">
                            <td style="width: 50%; height: 15px;">Dimanche</td>
                            <td style="width: 50%; height: 15px;">13h30-18h30</td>
                        </tr>
                    </tbody>
                </table></div>
        </div>
        </div>

        <div class="container-fluid px-1 px-sm-4 py-5 mx-auto">
            <div class="row d-flex justify-content-center">
                <div class="col-md-10 col-lg-9 col-xl-8">
                    <div class="card border-0">
                        <div class="row px-3">
                            <h2 class="fs-title">Modifier mes Horaires</h2>
                            <div class="col-sm-10 list">
                                <div class="mb-2 row justify-content-between px-3">
                                    <select class="mb-2 mob" name="horaires">
                                        <option value="lundi">Lundi</option>
                                        <option value="mardi">Mardi</option>
                                        <option value="mercredi">Mercredi</option>
                                        <option value="jeudi">Jeudi</option>
                                        <option value="vendredi">Vendredi</option>
                                        <option value="samedi">Samedi</option>
                                        <option value="dimanche">Dimanche</option>
                                        <option value="lundi-vendredi">Lundi-Vendredi</option>
                                        <option value="samedi-dimanche">Samedi-Dimanche</option>
                                    </select>
                                    <div class="mob"><label class="text-grey mr-1">De</label> <input class="ml-1"
                                                                                                     type="time"
                                                                                                     name="from"></div>
                                    <div class="mob mb-2"><label class="text-grey mr-4">A</label> <input class="ml-1"
                                                                                                         type="time"
                                                                                                         name="to">
                                    </div>
                                    <div class="mt-1 cancel fa fa-times-circle text-danger"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row px-3 mt-3">
                            <input type="button" name="add" class="add action-button" value="Ajouter"/>
                        </div>
                        <!--<div class="row px-3 mt-3 justify-content-center"> <button class="btn exit mr-2">Annuler</button> <button class="btn btn-success ml-2">Valider</button> </div> -->
                    </div>
                </div>
            </div>
        </div>

        <input type="button" name="previous" class="previous action-button" value="Précédent"/>
        <input type="button" name="next" class="next action-button" value="Suivant"/>
    </fieldset>

    <fieldset>
        <h2 class="fs-title">FAQ</h2>
        <input type="text" name="question" placeholder="Question"/>
        <input type="text" name="reponse" placeholder="Réponse"/>
        <div class="input_fields_wrap">
            <button class="add_field_button">Ajouter Champ</button>
        </div>

        <input type="button" name="previous" class="previous action-button" value="Précédent"/>
        <input type="submit" name="submit" class="submit action-button" value="Soumettre"/>
    </fieldset>

</form>
