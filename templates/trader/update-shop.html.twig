<body>
{% include 'header.html.twig' %}
<!-- multistep form -->
<form role="form" id="msform">
    <!-- progressbar -->
    <ul id="progressbar">
        <li class="active">Mettre à jour mon commerce</li>
        <li>Horaires</li>
        <li>FAQ</li>
    </ul>

    <!-- fieldsets -->
    <fieldset>
        <h2 class="fs-title">Mettre à jour mon commerce</h2>

        <div class="info">
        <label class="uslabel" for="nenseigne">Nom de L'enseigne</label>
        <input type="text" id="nom-enseigne" name="nenseigne"/>
        </div>

        <div class="info">
        <label class="uslabel" for="numvoie">Numéro de Voie</label>
        <input type="text"  id="numero-voie" name="numvoie"/>
        </div>

        <div class="info">
        <label class="uslabel" for="nomvoie">Nom de Voie</label>
        <input type="text" id="nom-voie" name="nomvoie"/>
        </div>

        <div class="info">
        <label class="uslabel" for="ca">Complément d'adresse</label>
        <input type="text" id="complement-adresse" name="ca"/>
        </div>

        <div class="info">
        <label class="uslabel" for="nville">Ville</label>
            <select name="nville" placeholder="Ville" id="nville">
            </select>
        </div>

        <div class="info">
        <label class="uslabel" for="numtel">Numéro Téléphone</label>
        <input type="tel" id="num-tel" name="numtel"/>
        </div>

        <div class="info">
        <label class="uslabel" for="type-magasin">Types</label>
        <select id="type-magasin" name="type-magasin">
            <option value="Commerces">Commerces</option>
            <option value="Coiffeurs">Coiffeurs</option>
            <option value="Boulangerie">Boulangerie</option>
        </select>
        </div>

        <div class="info">
        <label class="uslabel">Options Retrait</label>
        <select  id="option-retrait" name="oretrait">
            <option value="Click">Click&Collect</option>
            <option value="Livraison">Livraison</option>
        </select>
        </div>

        <div class="info">
        <label class="uslabel">A propos</label>
        <textarea rows="5" cols="20" wrap="physique" name="description" id="description"> </textarea><br/>
        </div>

        <div class="form-group">
            <label>Photo d'article</label>
            <input id="photo-article " type="file" multiple="multiple" accept="image/jpeg, image/png"
                   class="input_file" onchange="previewImage(this)">
        </div>

        <input type="button" name="next" class="next action-button" value="Suivant"/>

        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
            </div>

            <div class="carousel-inner" id="photo-list">
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </fieldset>

    <fieldset>
        <h2 class="fs-title">Mes Horaires</h2>
        <div class="hc-grid-container">
            <div class="Horaire">
                <table style="height: 112px; width: 100%; border-collapse: collapse; border-style: none; margin-left: auto; margin-right: auto;" border="0" cellpadding="0">
                    <tbody style="color:black;">
                    <tr style="height: 21px;">
                        <td style="width: 50%; height: 22px;">Lundi</td>
                        <td>
                            <input id="monday" type="text" value="08:00-12:00;14:00-18:00">
                        </td>
                    </tr>
                    <tr style="height: 15px;">
                        <td style="width: 50%; height: 15px;">Mardi</td>
                        <td style="width: 50%; height: 15px;">
                            <input id="tuesday" type="text" value="08:00-12:00;14:00-18:00">
                        </td>
                    </tr>
                    <tr style="height: 15px;">
                        <td style="width: 50%; height: 15px;">Mercredi</td>
                        <td style="width: 50%; height: 15px;">
                            <input id="wednesday" type="text" value="08:00-12:00;14:00-18:00">
                        </td>
                    </tr>
                    <tr style="height: 15px;">
                        <td style="width: 50%; height: 15px;">Jeudi</td>
                        <td style="width: 50%; height: 15px;">
                            <input id="thursday" type="text" value="08:00-12:00;14:00-18:00">
                        </td>
                    </tr>
                    <tr style="height: 15px;">
                        <td style="width: 50%; height: 15px;">Vendredi</td>
                        <td style="width: 50%; height: 15px;">
                            <input id="friday" type="text" value="08:00-12:00;14:00-18:00">
                        </td>
                    </tr>
                    <tr style="height: 15px;">
                        <td style="width: 50%; height: 15px;">Samedi</td>
                        <td style="width: 50%; height: 15px;">
                            <input id="saturday" type="text" value="08:00-12:00;14:00-18:00">
                        </td>
                    </tr>
                    <tr style="height: 15px;">
                        <td style="width: 50%; height: 15px;">Dimanche</td>
                        <td style="width: 50%; height: 15px;">
                            <input id="sunday" type="text" value="08:00-12:00;14:00-18:00">
                        </td>
                    </tr>
                    </tbody>
                </table></div>
        </div>
        </div>

        <input type="button" name="previous" class="previous action-button" value="Précédent"/>
        <input type="button" name="next" class="next action-button" id="horaires" value="Suivant"/>
    </fieldset>

    <fieldset>
        <h2 class="fs-title">FAQ</h2>
        <div id="faq-div" class="faq-div input_initial_wrap">

        </div>

        {#<input type="text" name="question" placeholder="Question"/>
        <input type="text" name="reponse" placeholder="Réponse"/>#}

        <div class="input_fields_wrap">
            <button class="add_field_button">Ajouter Champ</button>
        </div>

        <input type="button" name="previous" class="previous action-button" value="Précédent"/>
        <input type="submit" name="submit" class="submit action-button" value="Soumettre"/>
    </fieldset>

</form>
